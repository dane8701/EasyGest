    <!-- Start All Pages -->
    <div class="all-page-title page-breadcrumb">
        <div class="container text-center">
            <div class="row">
                <div class="col-lg-12">
                    <h1>Special Menu</h1>
                </div>
            </div>
        </div>
    </div>
    <!-- End All Pages -->
    <!-- Start Menu -->
    <div class="menu-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="heading-title text-center">
                        <h2>Special Menu</h2>
                        <p>Lorem Ipsum is simply dummy text of the printing and typesetting</p>
                    </div>
                </div>
            </div>

            <div class="row inner-menu-box">
                <div class="col-3">
                    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                        <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">All</a>
                        @foreach (var item in Model.categories)
                        {
                            @Html.ActionLink(@item.nomCategorie, "Index", null, new { @class = "nav-link", @id = "v-pills-"+ @item.nomCategorie +"-tab", @data_toggle = "pill", @href = "#v-pills-" + @item.nomCategorie, @role = "tab", @aria_controls = "v-pills-" + @item.nomCategorie, @aria_selected = "true" });
                        }
                    </div>
                </div>

                <div class="col-9">
                    <div class="tab-content" id="v-pills-tabContent">
                        <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
                            <div class="row">
                                @foreach (var item in Model.produits)
                                {
                                    <div class="col-lg-4 col-md-6 special-grid drinks">
                                        <div class="gallery-single fix">
                                            <img src="~/Content/images/img-01.jpg" class="img-fluid" alt="Image">
                                            <div class="why-text">
                                                <h4>@item.nomProduit</h4>
                                                <p>@item.description</p>
                                                <h5>@item.prix_ht
                                                        @Html.ActionLink("Add To Cart", "addCart", new { Controller = "Menu", action = "addCart", z = item.idProduit } ,new { @class = "cd-add-to-cart js-cd-add-to-cart", @data_price = "25.99" })
                                                </h5>
                                                
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>

                        </div>
                        <div class="tab-pane fade" id="v-pills-Boisson" role="tabpanel" aria-labelledby="v-pills-Boisson-tab">
                            <div class="row">
                                @foreach (var item in Model.produits)
                                {
                                    if (item.idCategorie == 0)
                                    {
                                        <div class="col-lg-4 col-md-6 special-grid drinks">
                                            <div class="gallery-single fix">
                                                <img src="~/Content/images/img-01.jpg" class="img-fluid" alt="Image">
                                                <div class="why-text">
                                                    <h4>@item.nomProduit</h4>
                                                    <p>@item.description</p>
                                                    <h5>@item.prix_ht
                                                        @Html.ActionLink("Add To Cart", "addCart", new { Controller = "Menu", action = "addCart", z = item.idProduit } ,new { @class = "cd-add-to-cart js-cd-add-to-cart", @data_price = "25.99" })
                                                    </h5>
                                                </div>
                                            </div>
                                        </div>
                                                                }
                                                            }
                            </div>
                        </div>
                        <div class="tab-pane fade" id="v-pills-Plat" role="tabpanel" aria-labelledby="v-pills-Plat-tab">
                            <div class="row">
                                @foreach (var item in Model.produits)
                                {
                                    if (item.idCategorie == 1)
                                    {
                                        <div class="col-lg-4 col-md-6 special-grid drinks">
                                            <div class="gallery-single fix">
                                                <img src="~/Content/images/img-01.jpg" class="img-fluid" alt="Image">
                                                <div class="why-text">
                                                    <h4>@item.nomProduit</h4>
                                                    <p>@item.description</p>
                                                    <h5>@item.prix_ht
                                                        @Html.ActionLink("Add To Cart", "addCart", new { Controller = "Menu", action = "addCart", z = item.idProduit } ,new { @class = "cd-add-to-cart js-cd-add-to-cart", @data_price = "25.99" })
                                                    </h5>
                                                </div>
                                            </div>
                                        </div>
                                                                }
                                                            }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Menu -->
    <!-- Start QT -->
    <div class="qt-box qt-background">
        <div class="container">
            <div class="row">
